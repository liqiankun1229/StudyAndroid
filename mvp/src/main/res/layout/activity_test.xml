<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.TestActivity">

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="微信小程序测试"
        app:layout_constraintTop_toBottomOf="@+id/tv_msg" />

    <Button
        android:id="@+id/btn_get_retrofit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取数据 Retrofit"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/btn_commit" />

    <Button
        android:id="@+id/btn_get_okhttp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取数据 Okhttp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/btn_get_retrofit" />

    <TextView
        android:id="@+id/tv_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="50dp"
        app:layout_constraintTop_toBottomOf="@id/btn_get_okhttp" />

    <EditText
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/tv_data" />

    <Button
        android:id="@+id/btn_get_gson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gson"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/et" />

    <Button
        android:id="@+id/btn_get_json"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="解析json"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/btn_get_gson" />

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_get_json" />

</androidx.constraintlayout.widget.ConstraintLayout>