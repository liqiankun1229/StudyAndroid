<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.CustomActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.lqk.activity.ui.widget.CustomView
                android:id="@+id/pr_test"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:padding="10dp"
                app:pr_bg_end_color="@color/colorPrimary"
                app:pr_bg_mid_color="@color/colorPrimary"
                app:pr_bg_start_color="@color/colorPrimary"
                app:pr_progress="80"
                app:pr_progress_end_color="@color/colorAccent"
                app:pr_progress_start_color="@color/colorAccent" />

            <!--<com.lqk.activitydemo.ui.widget.CircleImageView-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:src="@drawable"/>-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <com.lqk.activity.ui.widget.UserView
                android:layout_width="match_parent"
                android:layout_height="2000dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>